doctype html
html(lang="sp")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="style.css")
        title Focus imagen
    body 
        h1 Galeria de mi pais
        mixin caja(img)
            div 
                img(id="imga" src=""+img)
                ul 
                    li(coords='object-fit: none; object-position: 0% 20%;') 
                    li(coords='object-fit: none; object-position: 95% 20%') 
                    li(coords='object-fit: none; object-position: 20% 100%') 
                    li(coords='object-fit: none; object-position: 85% 100%') 
                    li(coords='object-fit: none; object-position: 50% 60%') 
                    li(coords='object-fit: none; object-position: 50% 0%;') 
                    li(coords='object-fit: none; object-position: 100% 60%;') 
                    li(coords='object-fit: none; object-position: 50% 100%;') 
                    li(coords='object-fit: none; object-position: 0% 55%;') 
        +caja('img/Fondo.jpg')
        +caja('img/Fondo2.jpg')
        +caja('img/Fondo3.jpg')
        +caja('img/Fondo4.png')
        




        script.
            window.onload = function(){
                let $ = document;
                $.addEventListener("click", function( event ) {
                    if(event.target.children.length==0)
                        if(event.path[2].firstElementChild.getAttribute("style"))
                        event.path[2].firstElementChild.setAttribute('style', event.target.getAttribute("coords"));
                        else
                            event.path[2].firstElementChild.setAttribute('style', event.target.getAttribute("coords"));
                    else
                        event.path[1].firstElementChild.removeAttribute('style');
                }, false);
            }
 